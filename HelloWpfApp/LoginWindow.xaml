<Window x:Class="HelloWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="333" Width="355" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="#FF1F6BD4" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Content="Đăng nhập hệ thống quản lý" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Foreground="#FF25D6FD"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="23,88,0,0" VerticalAlignment="Top" Foreground="#FFF3EBEB"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="106,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="184" FontSize="20"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="23,144,0,0" VerticalAlignment="Top" Foreground="#FFFDFBFB"/>
        <Button x:Name="btnDangNhap" Content="Đăng Nhập" HorizontalAlignment="Left" Margin="65,208,0,0" VerticalAlignment="Top" Height="41" Width="87" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="198,209,0,0" VerticalAlignment="Top" Height="40" Width="77" Click="btnThoat_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="106,0,0,0" VerticalAlignment="Center" Width="184" FontSize="20"/>

    </Grid>
</Window>
